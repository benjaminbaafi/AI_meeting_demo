# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_WHISPER_DEPLOYMENT=whisper
AZURE_OPENAI_GPT_DEPLOYMENT=gpt-4

# Application Settings
APP_NAME=AI Meeting Participant
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# File Upload Settings
MAX_UPLOAD_SIZE_MB=500
ALLOWED_VIDEO_FORMATS=mp4,mov,avi,webm,mkv
ALLOWED_AUDIO_FORMATS=mp3,wav,m4a,aac,flac

# Storage Settings
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
OUTPUT_DIR=./outputs

# Processing Settings
MAX_CONCURRENT_JOBS=5
TRANSCRIPTION_TIMEOUT_SECONDS=3600
SUMMARY_TIMEOUT_SECONDS=300

# Real-time Streaming Settings
WEBSOCKET_TIMEOUT_SECONDS=300
STREAM_CHUNK_SIZE_BYTES=4096

# Security Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
SECRET_KEY=your-secret-key-change-in-production

# Database (Optional - for job tracking)
DATABASE_URL=sqlite:///./ai_meeting.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
